%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      =bootstrap_form_tag url: '/login' do |f|
        %header
          %h1 Sign in
        %fieldset
          .form-group
            .row
              .col-sm-4
                =f.email_field :email, value: 'name@example.com'
          .form-group
            .row
              .col-sm-4
                =f.password_field :password
        %fieldset.form-group.action
          =f.submit "Sign In"
